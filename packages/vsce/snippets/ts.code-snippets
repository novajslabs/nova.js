      "",
      "/* eslint-disable-next-line */",
      "type TUseSearchParams = <T = Record<string, any>>(",
      "  url?: string,",
      "  opt?: { unique: boolean }",
      ") => T;",
      "",
      "export const useSearchParams: TUseSearchParams = <T>(",
      "  url = location.href,",
      "  opt = { unique: true }",
