      "    await navigator.share({",
      "      title: data.title,",
      "      text: data.text ?? '',",
      "      url: data.url ?? '',",
      "      files: data.files ?? [],",
      "    });",
      "  }",
      "",
      "  return {",
      "    shareInNavigator: surroundTryCatch(shareInNavigator),",
      "  };",
      "};"
