      "          errorMessages[(error as Error).name]",
      "        }`;",
      "        console.error(message);",
      "      } else {",
      "        throw error;",
      "      }",
      "    }",
      "  };",
      "}",
      "",
      "export const useNavigatorShare = () => {",
      "  async function shareInNavigator(data: IShareData) {",
